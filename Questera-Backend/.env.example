# Database
MONGODB_URI=your_mongodb_connection_string

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key

# AWS S3
AWS_REGION=us-east-2
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET_NAME=your_s3_bucket_name

# JWT
JWT_SECRET=your_jwt_secret_key

# Instagram OAuth (using Instagram Graph API)
# Create app at: https://developers.facebook.com/
INSTAGRAM_APP_ID=your_instagram_app_id
INSTAGRAM_APP_SECRET=your_instagram_app_secret
INSTAGRAM_REDIRECT_URI=http://localhost:5173/instagram/callback

# Node Environment
NODE_ENV=development

# PM2.io Monitoring (Optional - for production monitoring)
# Get these from: https://app.pm2.io/
PM2_PUBLIC_KEY=your_pm2_public_key
PM2_SECRET_KEY=your_pm2_secret_key